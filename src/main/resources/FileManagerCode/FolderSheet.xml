#set ($discard = $xwiki.ssx.use('FileManagerCode.FolderSheet'))
(% class="listing" %)(((
#if ("$!doc.parent" != '')
  * [[image:icon:folder||class="icon"]] [[..&gt;&gt;$doc.parent]]
#end
## List the child folders.
#set ($query = $services.query.xwql('from doc.object(FileManagerCode.FolderClass) as folder where doc.parent = :parent order by doc.name'))
#foreach ($folder in $query.bindValue('parent', $doc.fullName).execute())
  #set ($folderDoc = $xwiki.getDocument($folder))
  * [[image:icon:folder||class="icon"]] [[$folderDoc.plainTitle&gt;&gt;$folderDoc]]
#end
## List the child files.
#set ($query = $services.query.xwql('from doc.object(FileManagerCode.FileClass) as file where :tag member of doc.object(XWiki.TagClass).tags order by doc.name'))
#foreach ($file in $query.bindValue('tag', $doc.name).execute())
  #set ($fileDoc = $xwiki.getDocument($file))
  #set ($attach = $fileDoc.attachmentList.get(0))
  * {{html}}#mimetypeimg($attach.mimeType.toLowerCase() $attach.filename.toLowerCase()){{/html}} [[$attach.filename&gt;&gt;$fileDoc]]
#end
)))
{{/velocity}}</content>
